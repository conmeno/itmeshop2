@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
 
    <div>
        @foreach (var item in Model)
        {
            <div class="product-grid home-page-product-grid">
                <div class="title">
                    <strong>@item.Name</strong>
                      <a style="float:right;font-size:16px;line-height:36px;" href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">+ xem thêm</a>
                </div>
                @if (item.Products.Count > 0)
                {

                   
                        
                 
                    foreach (var item1 in item.Products)
                    {
                    <div class="item-box">
                        @Html.Partial("_ProductBox", item1)
                    </div>
                    } 
                }
            </div>
        }
    </div>
}